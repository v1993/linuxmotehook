// DO NOT EDIT THIS FILE. USE config.json TO OVERRIDE THESE SETTINGS.

{

	"DefaultCalibration": [0, 0, 0, 0, 1, 1, 1],

	// Base constants which are required in every configuration

	"baseBuiltin": {
		"ACCEL_GRAV_WII":	103,	// Gravitational acceleration (in raw data units)
		"ACCEL_GRAV_REAL":	1,		// Gravitational acceleration (in Gs)
		"GYRO_MAX_WII":		335160,	// Maximal rotation your MotionPlus can handle out (in raw data units)
		"GYRO_MAX_REAL":	1860,	// Maximal rotation your MotionPlus can handle out (deg/s)
	},

	"base": {
		"basedOn": ["baseOverride", "baseBuiltin"]
	},

	// Read GitHub wiki for more information on this
	"Vertical": {
		"basedOn": "base",

		"keys": {
			"up":		"up",
			"right":	"right",
			"down":		"down",
			"left": 	"left",

			"A":		"A",
			"B":		"B",
			"options":	"home"
		},

		"accel": {
			"x": ["x", 1],
			"y": ["y", 1],
			"z": ["z", -1]
		},

		"gyro": {
			"p": ["z", 1],
			"y": ["y", -1],
			"r": ["x", 1]
		}
	},

	"Pointed away": {
		"basedOn": "Vertical",

		"accel": {
			"y": ["z", -1],
			"z": ["y", -1]
		},

		"gyro": {
			"y": ["x", 1],
			"r": ["y", 1]
		}
	},

	"Dolphin": {
		"basedOn": "Pointed away",

		"keys": {
			"L1": "minus",
			"R1": "plus",
			"L2": "one",
			"R2": "two"
		}
	},

	"Horizontal": {
		"basedOn": "base",

		"keys": {
			"up":		"right",
			"right":	"down",
			"down":		"left",
			"left": 	"up",

			"A":		"one",
			"B":		"two",
			"options":	"home"
		},

		"accel": {
			"x": ["y", -1],
			"y": ["z", -1],
			"z": ["x", -1]
		},

		"gyro": {
			"p": ["y", -1],
			"y": ["x", 1],
			"r": ["z", 1]
		}
	},

	"Disable D-Pad": {
		"keys": {
			"up":		"",
			"right":	"",
			"down":		"",
			"left": 	"",
		}
	},

	"Horizontal with left joystick": {
		"basedOn": ["Disable D-Pad", "Horizontal"],
		"keys": {
			"leftjoy": {
				"x": {
					"minus": "up",
					"plus": "down"
				},
				"y": {
					"minus": "left",
					"plus": "right"
				}
			}
		}
	}
}
